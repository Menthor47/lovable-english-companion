RewriteEngine On
RewriteBase /

# --- SEO / Canonical URL hygiene ---
# Avoid Apache DirectorySlash doing protocol-downgrade redirects behind a CDN/proxy.
DirectorySlash Off

# If behind a proxy/CDN that sets X-Forwarded-Proto, force HTTPS without guessing.
# This prevents https:// -> http:// redirect hops in redirect chains.
RewriteCond %{HTTP:X-Forwarded-Proto} =http [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Legacy URL -> canonical URL
RewriteRule ^privacy-policy/?$ /privacy [R=301,L]

# Enforce NO trailing slash canonical URLs (except root and static asset folders)
RewriteCond %{REQUEST_URI} .+/$
RewriteCond %{REQUEST_URI} !^/(assets|images|img|locales|\.well-known)/ [NC]
RewriteRule ^(.+)/$ /$1 [R=301,L]

<IfModule pagespeed_module>
  ModPagespeed off
</IfModule>

# Cache static assets aggressively
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType text/javascript "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|png|jpe?g|webp|svg)$">
    Header set Cache-Control "public, max-age=2592000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>

# Return proper 404 status for non-existent routes (SEO-correct behavior)
# The prerendered 404.html will be served with actual 404 HTTP status
ErrorDocument 404 /404.html

# Only rewrite known SPA routes that have prerendered HTML directories
# Unknown routes will fall through to ErrorDocument 404
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI}/index.html -f
RewriteRule ^(.*)$ /$1/index.html [L]
